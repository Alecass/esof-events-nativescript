<!-- https://docs.nativescript.org/ui/overview  -->
<Page
    navigatingTo="onNavigatingTo"
    xmlns:lv="nativescript-ui-listview">

    <ActionBar class="schedule">
        <Label text="{{Logged}}"></Label>
        <ActionItem tap="showDialog"
      ios.systemIcon="9" ios.position="right"
      android.systemIcon="ic_menu_share" android.position="actionBar"></ActionItem>
      
      <ActionItem tap="showFunction"

      ios.systemIcon="{{isCorrect == '1' ? 8 : 7}}" ios.position="left"
      android.systemIcon="ic_menu_share" android.position="actionBar"></ActionItem>
    </ActionBar>



    <lv:RadListView
        class="myList"
        items="{{ items }}"
        row="1"
        groupingFunction="{{ myGroupingFunc }}"
    >
        <lv:RadListView.itemTemplate>
            <StackLayout orientation="vertical">
                <StackLayout class="wrap">
                    <Label fontSize="16" class="border-list" text="{{ nome }}" textWrap="true"></Label>
                    <Label
                        fontSize="13"
                        class="border-list sub"
                        text="{{sub}}"
                        textWrap="true">
                    </Label>
                    <StackLayout
                        class="separator"
                        height="2"
                        marginTop="10"
                        backgroundColor="#bdbdbd"
                    >
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </lv:RadListView.itemTemplate>
    </lv:RadListView>
</Page>
